{
  "name": "chatgpt-text-highlight",
  "version": "1.0.0",
  "description": "Chrome/Edge extension for collecting text snippets from ChatGPT conversations",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "prepare": "husky"
  },
  "keywords": [
    "chrome-extension",
    "chatgpt",
    "text-highlight",
    "snippets"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "vitest": "^1.0.0"
  }
}
